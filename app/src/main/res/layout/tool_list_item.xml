<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tool_log_row_table_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gradient_border_background"
    android:gravity="center_vertical"
    >

    <ImageView
            android:id="@+id/tool_item_image_view"
            android:layout_width="@dimen/list_item_icon_width"
            android:layout_height="@dimen/list_item_icon_height"
            android:background="@drawable/ic_hook"
            android:contentDescription="Test"
            android:duplicateParentState="true" />
    <!--"@string/tool_log_row_tool_type_image_view_content_description" -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        android:gravity="center_vertical"
        android:layout_weight="4"
        >

        <TextView
            android:id="@+id/tool_item_title_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From: Username"
            android:duplicateParentState="true"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tool_item_detail_1_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:duplicateParentState="true"
            android:text="Date and time or other first detail"
            />
        <!--            android:layout_marginTop="@dimen/utility_row_margin_top" -->

        <TextView
            android:id="@+id/tool_item_detail_2_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:duplicateParentState="true"
            android:text="Position or other second detail"
            />
        <!--            android:layout_marginTop="@dimen/utility_row_margin_top" -->
    </LinearLayout>

    <ImageView
        android:id="@+id/tool_status_button"
        android:visibility="gone"
        android:layout_width="@dimen/list_item_icon_width"
        android:layout_height="@dimen/list_item_icon_height" />
    <ImageButton
        android:id="@+id/tool_remove_button"
        android:visibility="gone"
        android:layout_width="@dimen/list_item_icon_width"
        android:layout_height="@dimen/list_item_icon_height"
        app:srcCompat="@drawable/ic_baseline_remove_24" />
</TableRow>