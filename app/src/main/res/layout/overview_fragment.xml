<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.overview.OverviewFragment">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:text="FiskInfo 3 demos:"
                android:padding="16dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
                android:padding="16dp">
            <Button
                    android:id="@+id/map_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="New map view"
                    android:drawableLeft="@drawable/ic_map"/>
            <Button
                android:id="@+id/snapfish_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Snapfish"
                android:drawableLeft="@drawable/ic_snap"/>
        <Button
                android:id="@+id/catch_analysis_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Catch analysis"
                android:drawableLeft="@drawable/ic_chart"/>

        </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/overview_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toBottomOf="@id/linear"
        app:layoutManager="LinearLayoutManager"
        tools:context=".ui.overview.OverviewFragment"
        tools:listitem="@layout/overview_card_with_actions_layout" />


</androidx.constraintlayout.widget.ConstraintLayout>