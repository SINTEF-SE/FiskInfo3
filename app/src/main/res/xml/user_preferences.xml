<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="App settings">

        <ListPreference
            android:defaultValue="1"
            android:entries="@array/coordinate_formats"
            android:entryValues="@array/coordinate_formats"
            android:key="list_preference_1"
            android:title="Coordinate format" />
        <ListPreference
            android:defaultValue="1"
            android:entries="@array/default_tool_type"
            android:entryValues="@array/default_tool_type"
            android:key="list_preference_1"
            android:title="Default tool type" />

    </PreferenceCategory>
    <Preference
        android:key="consent"
        android:title="Conditions for use and consent"
        android:summary="Conditions, privacy, etc"/>
</androidx.preference.PreferenceScreen>